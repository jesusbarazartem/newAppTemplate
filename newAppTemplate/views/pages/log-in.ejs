<div id="login" class="container-lg bg-ligth" style="min-height: 700px;" v-cloak>
    <main class="form shadow-lg my-5 py-5"
        style="height: 100%; width: 100%; max-width: 400px; padding: 10px; margin: auto;">
        <form id="login" action="/log-in-form" method="POST">
            <h3 class="text-center">Log In Here</h3>
            <div class="form-floating mt-2">
                <input type="email" class="form-control mt-2" id="email" name="email" placeholder="Email Address"
                    required>
                <label for="email">Email address</label>
            </div>
            <div class="form-floating mt-2">
                <input type="password" class="form-control" id="password" name="password" placeholder="Password"
                    required>
                <label for="password">Password</label>
            </div>
            <button class="w-100 mt-4 btn btn-primary" type="submit">Sign In</button>
            <hr>
            <a href="/sign-up" type="link">Don't have an account yet?</a>
        </form>
    </main>
</div>