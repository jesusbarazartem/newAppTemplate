<div id="signup" class="container-lg bg-ligth" style="min-height: 700px;" v-cloak>
    <main class="form shadow-lg my-5 py-5"
        style="height: 100%; width: 100%; max-width: 400px; padding: 10px; margin: auto;">
        <form id="signup" action="/sign-up-form" method="POST">
            <h3 class="text-center">Create New Account</h3>
            <div class="form-floating">
                <input type="text" class="form-control" id="name" name="name" placeholder="Full Name" required>
                <label for="name">Full Name</label>
            </div>
            <div class="form-floating">
                <input type="email" class="form-control mt-2" id="email" name="email" placeholder="Email Address"
                    required>
                <label for="email">E-mail Address</label>
            </div>
            <div class="form-floating">
                <input type="password" class="form-control mt-2" id="password" name="password" placeholder="Password"
                    required>
                <label for="password">Password</label>
            </div>
            <div class="form-floating">
                <input type="password" class="form-control mt-2" id="passwordCheck" name="passwordCheck"
                    placeholder="Insert Again Password" required>
                <label for="passwordCheck">Insert Password Again</label>
            </div>
            <button class="w-100 mt-4 btn btn-primary" type="submit">Create</button>
            <a href="/log-in" type="button" class="w-100 mt-2 btn btn-danger">Cancel</a>
        </form>
    </main>
</div>